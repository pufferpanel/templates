{
  "type": "doom",
  "display": "Zandronum",
  "install": [
    {
      "type": "download",
      "files": [
        "https://zandronum.com/downloads/zandronum${version}-linux-${arch}.tar.bz2",
        "http://distro.ibiblio.org/pub/linux/distributions/slitaz/sources/packages/d/doom1.wad"
      ]
    },
    {
      "type": "command",
      "commands": [
        "tar xvjf *.tar.bz2"
      ]
    },
    {
      "type": "writefile",
      "text": "",
      "target": "whitelist.txt"
    },
    {
      "type": "writefile",
      "text": "",
      "target": "banlist.txt"
    },
    {
      "type": "writefile",
      "text": "",
      "target": "adminlist.txt"
    }
  ],
  "run": {
    "stop": "Quit",
    "pre": [],
    "post": [],
    "arguments": "-host ${players}",
    "program": "./zandronum-server"
  },
  "environment": {
    "type": "standard"
  },
  "supportedEnvironments": [
    {
      "type": "standard"
    },
    {
      "type": "docker",
      "image": "pufferpanel/generic"
    }
  ],
  "data": {
    "version": {
      "value": "2.1.2",
      "required": true,
      "desc": "Which version of Zandronum you want to download.",
      "display": "Version",
      "internal": false
    },
    "arch": {
      "value": "x86_64",
      "required": true,
      "desc": "Which architecture of Zandronum you want to download",
      "display": "Architecture",
      "internal": false,
      "type": "option",
      "options": [
        {
          "value": "x86_64"
        }
      ]
    }
  }
}