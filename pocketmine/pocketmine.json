{
  "type": "minecraft-bedrock",
  "display": "PocketMine-MP",
  "install": [{
      "type": "download",
      "files": "https://raw.githubusercontent.com/pmmp/php-build-scripts/master/installer.sh"
    },
    {
      "commands": [
        "chmod +x ./installer.sh",
        "./installer.sh"
      ],
      "type": "command"
    },
    {
      "type": "writefile",
      "text": "server-ip=${ip}\nserver-port=${portv4}\n",
      "text": "server-ip=${ip}\nserver-portv6=${portv6}\n",
      "target": "server.properties"
    }
  ],
  "run": {
    "stop": "stop",
    "pre": [],
    "post": [],
    "command": "./start.sh --no-wizard"
  },
  "environment": {
    "type": "tty"
  },
  "supportedEnvironments": [{
    "type": "tty"
  }],
  "data": {
    "ip": {
      "value": "0.0.0.0",
      "required": true,
      "desc": "What IP to bind the server to",
      "display": "IP",
      "internal": false
    },
    "portv4": {
      "value": "19132",
      "required": true,
      "desc": "What port ipv4 to bind the server to",
      "display": "Port-ipv4",
      "internal": false,
      "type": "integer"
    },
    "portv6": {
      "value": "19133",
      "required": true,
      "desc": "What port ipv6 to bind the server to",
      "display": "Port-ipv6",
      "internal": false,
      "type": "integer"
    }
  },
  "requirements": {
    "os": "linux",
    "arch": "amd64"
  }
}
