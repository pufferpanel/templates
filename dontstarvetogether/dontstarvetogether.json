        },
        "description": {
            "desc": "Description for the Server",
            "display": "Server Description",
            "required": true,
            "value": "Dont Starve Together Server",
            "userEdit": true,
            "type": "string"
        },
        "password": {
            "desc": "(optional) The password, needed to connect to your Server",
            "display": "Password",
            "value": "",
            "userEdit": true,
