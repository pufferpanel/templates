        },
        "maxplayers": {
            "desc": "How much Players can connect to your Server",
            "display": "Max Players",
            "required": true,
            "value": "5",
            "userEdit": true,
            "type": "integer"
        },

        "pvp": {
            "desc": "Should PvP activated on the Server?",
            "display": "PvP",
            "required": true,
            "value": "false",
            "userEdit": true,
            "type": "boolean"
        },
        "gamemode": {
            "desc": "The Gamemode you want to play in",
            "display": "Gamemode",
            "required": true,
            "value": "",
            "userEdit": true,
            "type": "option",
            "options": [
                {
                    "value": "survival",
                    "display": "Survival"
                },
                {
                    "value": "wilderness",
                    "display": "Wilderness"
                },
                {
