{
  "name": "terraria",
  "display": "Terraria - Vanila",
  "type": "terraria",
  "install": [
    {
      "files": [
        "https://terraria.org/api/download/pc-dedicated-server/terraria-server-${version}.zip"
      ],
      "type": "download"
    },
    {
      "commands": [
        "unzip terraria-server-${version}.zip",
        "cp -r ${rootDir}/${version}/Linux/. ${rootDir}",
        "chmod +x ${rootDir}/TerrariaServer",
        "chmod +x ${rootDir}/TerrariaServer.bin.x86_64",
        "rm terraria-server-${version}.zip",
        "rm -r ${version}"
      ],
      "type": "command"
    }
  ],
  "run": {
    "stop": "exit",
    "command": "${rootDir}/TerrariaServer -port ${port} -secure -steam -password ${password} -players ${players} -world ${rootDir}/.local/share/Terraria/Worlds/${world}.wld -autocreate ${size} -worldname ${world} -seed ${seed}",
    "workingDirectory": "",
    "pre": [],
    "post": [],
    "environmentVars": {}
  },
  "data": {
    "password": {
      "type": "string",
      "desc": "Server Password - leave blank for none",
      "display": "Password",
      "required": true,
      "value": ""
    },
    "players": {
      "type": "string",
      "desc": "Max Players",
      "display": "Players",
      "required": true,
      "value": "4"
    },
    "port": {
      "type": "string",
      "desc": "What port to bind the server to",
      "display": "Port",
      "required": true,
      "value": "7777"
    },
    "seed": {
      "type": "string",
      "desc": "Seed of the World",
      "display": "Seed",
      "required": true,
      "value": "VeryGoodStartingSeed"
    },
    "size": {
      "type": "string",
      "desc": "World Size (1-3 - 3 is biggest)",
      "display": "World-Size",
      "required": true,
      "value": "3"
    },
    "version": {
      "type": "string",
      "desc": "Server Version (Set this to the latest server version) - It is the current terraria Version without the Points (Client Version: 1.4.3.2 -> Server Version: 1432)",
      "display": "Server Version",
      "required": true,
      "value": "1432"
    },
    "world": {
      "type": "string",
      "desc": "Name of your World",
      "display": "World-Name",
      "required": true,
      "value": "Terraria-World-1"
    }
  },
  "environment": {
    "type": "tty"
  },
  "supportedEnvironments": [
    {
      "type": "tty"
    },
    {
      "bindings": {},
      "image": "pufferpanel/generic",
      "networkMode": "host",
      "networkName": "",
      "portBindings": [
        "0.0.0.0:7777:7777/tcp"
      ],
      "type": "docker"
    }
  ]
}
