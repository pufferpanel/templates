{
  "type": "theforest_win",
  "display": "The Forest (Windows Only)",
  "install": [
    {
      "type": "download",
      "files": "https://steamcdn-a.akamaihd.net/client/installer/steamcmd.zip"
    },
    {
      "type": "mkdir",
      "target": "steamcmd"
    },
    {
      "type": "command",
      "commands": [
        "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe -nologo -noprofile -command & {& Add-Type -A 'System.IO.Compression.FileSystem'; [IO.Compression.ZipFile]::ExtractToDirectory('steamcmd.zip', 'steamcmd'); .\\steamcmd\\steamcmd.exe +login anonymous +force_install_dir ${rootDir} +app_update 556450 validate +quit}"
      ]
    }
  ],
  "run": {
    "stop": "exit",
    "pre": [],
    "post": [],
    "arguments": [
      "-servername",
      "${servername}",
      "-serverip",
      "${ip}",
      "-serversteamport",
      "${serversteamport}",
      "-servergameport",
      "${servergameport}",
      "-serverqueryport",
      "${serverqueryport}",
      "-serverplayers",
      "${serverplayers}",
      "-serverpassword",
      "${serverpassword}",
      "-serverpassword_admin",
      "${serverpassword_admin}",
      "-serversteamaccount",
      "${serversteamaccount}",
      "-serverautosaveinterval",
      "${serverautosaveinterval}",
      "-difficulty",
      "${difficulty}",
      "-inittype",
      "${inittype}",
      "-enableVAC",
      "-showlogs",
      "-batchmode",
      "-dedicated",
      "-nographics",
      "-nosteamclient"
    ],
    "program": "./TheForestDedicatedServer.exe"
  },
  "environment": {
    "type": "standard"
  },
  "supportedEnvironments": [
    {
      "type": "standard"
    }
  ],
  "data": {
    "servername": {
      "value": "The Forest",
      "required": true,
      "desc": "Server Name",
      "display": "Server Name",
      "internal": false
    },
    "ip": {
      "value": "0.0.0.0",
      "required": true,
      "desc": "What IP to bind the server to",
      "display": "IP",
      "internal": false
    },
    "serversteamport": {
      "value": "8766",
      "required": true,
      "desc": "Steam Communication Port",
      "display": "Port",
      "internal": false,
      "type": "integer"
    },
    "servergameport": {
      "value": "27015",
      "required": true,
      "desc": "Game Communication Port",
      "display": "Port",
      "internal": false,
      "type": "integer"
    },
    "serverqueryport": {
      "value": "27016",
      "required": true,
      "desc": "Query Communication Port",
      "display": "Port",
      "internal": false,
      "type": "integer"
    },
    "serverplayers": {
      "value": "4",
      "required": true,
      "desc": "Maximum number of players",
      "display": "Players",
      "internal": false,
      "type": "integer"
    },
    "serverpassword": {
      "value": "",
      "required": false,
      "desc": "Server password. blank means no password",
      "display": "Server Password",
      "internal": false
    },
    "serverpassword_admin": {
      "value": "",
      "required": false,
      "desc": "Server administration password. blank means no password",
      "display": "Server Admin Password",
      "internal": false
    },
    "serversteamaccount": {
      "value": "",
      "required": false,
      "desc": "Your Steam account name. blank means anonymous",
      "display": "Server Steam Account",
      "internal": false
    },
    "serverautosaveinterval": {
      "value": "30",
      "required": false,
      "desc": "Time between server auto saves in minutes - The minumum time is 15 minutes, the default time is 30",
      "display": "Server AutoSave Interval",
      "internal": false,
      "type": "integer"
    },
    "difficulty": {
      "value": "Normal",
      "required": false,
      "desc": "Game difficulty mode. Must be set to Peaceful Normal or Hard",
      "display": "Difficulty",
      "internal": false,
      "type": "option",
      "options": [
        {
          "value": "Peaceful"
        },
        {
          "value": "Normal"
        },
        {
          "value": "Hard"
        }
      ]
    },
    "inittype": {
      "value": "Continue",
      "required": false,
      "desc": "New or continue a game. Must be set to New or Continue",
      "display": "Init Type",
      "internal": false,
      "type": "option",
      "options": [
        {
          "value": "Continue"
        },
        {
          "value": "New"
        }
      ]
    }
  }
}