{
  "type": "srcds",
  "display": "Team Fortress 2 (Docker)",
  "data": {
    "map": {
      "value": "ctf_2fort",
      "required": true,
      "desc": "TF2 Map",
      "display": "Team Fortess 2 Map to load",
      "internal": false
    },
    "ip": {
      "value": "0.0.0.0",
      "required": true,
      "desc": "What IP to bind the server to",
      "display": "IP",
      "internal": false
    },
    "port": {
      "value": "27015",
      "required": true,
      "desc": "What port to bind the server to",
      "display": "Port",
      "internal": false,
      "type": "integer"
    }
  },
  "install": [
    {
      "type": "command",
      "commands": [
        "steamcmd +login anonymous +force_install_dir ${rootDir} +app_update 232250 +quit"
      ]
    }
  ],
  "run": {
    "command": "./srcds_run +ip ${ip} +port ${port} -game tf -console +map ${map} -norestart",
    "stop": "exit"
  },
  "environment": {
    "type": "docker",
    "image": "steamcmd/steamcmd"
  },
  "requirements": {
    "arch": "amd64"
  }
}