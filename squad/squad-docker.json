{
  "type": "squad",
  "display": "SQUAD Dedicated Server (Docker)",
  "data": {
    "fixed_max_players": {
      "type": "integer",
      "desc": "Player count cannot go higher than this",
      "display": "Fixed Max Players",
      "required": true,
      "value": "80"
    },
    "port": {
      "type": "integer",
      "desc": "Game server port",
      "display": "Port",
      "required": true,
      "value": "7787"
    },
    "query_port": {
      "type": "integer",
      "desc": "Steam query port",
      "display": "Steam Query Port",
      "required": true,
      "value": "27165"
    },
    "random": {
      "desc": "Randomize map rotation",
      "display": "Random",
      "required": true,
      "value": "NONE",
      "type": "option",
      "options": [
        {
          "value": "NONE",
          "display": "None"
        },
        {
          "value": "FIRST",
          "display": "First"
        },
        {
          "value": "ALWAYS",
          "display": "Always"
        }
      ]
    }
  },
  "install": [
    {
      "type": "command",
      "commands": [
        "steamcmd +login anonymous +force_install_dir . +app_update 403240 +quit"
      ]
    }
  ],
  "run": {
    "command": "./SquadGameServer.sh Port=${port} QueryPort=${query_port} FIXEDMAXPLAYERS=${fixed_max_players} RANDOM=${random}",
    "stop": "exit",
    "workingDirectory": "",
    "pre": [
      {
        "type": "command",
        "commands": [
          "steamcmd +login anonymous +force_install_dir . +app_update 403240 +quit"
        ]
      },
      {
        "commands": [ "chmod +x ./SquadGameServer.sh" ],
        "type": "command"
      }
    ]
  },
  "environment": {
    "type": "docker",
    "image": "steamcmd/steamcmd"
  },
  "requirements": {
    "arch": "amd64"
  }
}
