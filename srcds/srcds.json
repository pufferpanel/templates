{
  "type": "srcds",
  "display": "Generic SRCDS",
  "install": [
    {
      "type": "download",
      "files": "https://steamcdn-a.akamaihd.net/client/installer/steamcmd_linux.tar.gz"
    },
    {
      "type": "mkdir",
      "target": "steamcmd"
    },
    {
      "type": "command",
      "commands": [
        "tar --no-same-owner -xzvf steamcmd_linux.tar.gz -C steamcmd",
        "steamcmd/steamcmd.sh +login anonymous +force_install_dir .. +app_update ${appid} +quit",
        "mkdir -p .steam/sdk32",
        "cp steamcmd/linux32/steamclient.so .steam/sdk32/steamclient.so"
      ]
    }
  ],
  "run": {
    "stop": "exit",
    "pre": [],
    "post": [],
    "command": "./srcds_run +ip ${ip} +port ${port} -game ${gametype} -console +map ${map} -norestart"
  },
  "environment": {
    "type": "tty"
  },
  "supportedEnvironments": [
    {
      "type": "tty"
    },
    {
      "type": "docker",
      "image": "pufferpanel/srcds"
    }
  ],
  "data": {
    "appid": {
      "value": "232250",
      "required": true,
      "desc": "App ID",
      "display": "Application ID",
      "internal": false,
      "type": "integer"
    },
    "gametype": {
      "value": "tf",
      "required": false,
      "desc": "Game Type",
      "display": "tf, csgo, etc.",
      "internal": false
    },
    "map": {
      "value": "ctf_2fort",
      "required": false,
      "desc": "Map",
      "display": "Map to load",
      "internal": false
    },
    "ip": {
      "value": "0.0.0.0",
      "required": true,
      "desc": "What IP to bind the server to",
      "display": "IP",
      "internal": false
    },
    "port": {
      "value": "27015",
      "required": true,
      "desc": "What port to bind the server to",
      "display": "Port",
      "internal": false,
      "type": "integer"
    }
  }
}
